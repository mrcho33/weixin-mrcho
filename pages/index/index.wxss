/* miniprogram/pages/index/index.wxss */
.indexContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.banner{
  border-radius: 20rpx;
  width: 90%;
  height: 420rpx;
  background-image: url('https://img.zcool.cn/community/01e3115b659fb0a801206a35eaef8b.jpg@1280w_1l_2o_100sh.jpg');
  background-size: 100%;
  display: flex;
  align-items: center;
  justify-content: center; 
}
.banner text{
  z-index: 1;
  font-weight: bolder;
  font-size: 90rpx;
  color: rgb(256,256,256);
  letter-spacing:5rpx;
  background-color: rgb(256,256,256 90%);
}
.iconfont{
  line-height: 100rpx;
  font-size: 54rpx;
  color: #999;
}
.cur{
  color: #333;
}
.home_ico_mid{
  float: left;
  margin: 30rpx 0rpx;
  width: 90%;
  display: flex;
  align-items: center;
  justify-content:  space-between;
}
.home_ico{
  text-align: center;
  flex-flow: column;
}
.home_ico view{
  display: flex;
  justify-content:  center;
  align-items: center;
  font-size: 54rpx;
  color: #000;
}
.home_ico text{
  width: 100%;
  text-align: center;
  display: block;
  line-height: 72rpx;
  font-size: 28rpx;
}
.home_ico_bg{
  width: 100rpx;
  height: 100rpx;
  background-color:rgb(93,156,236, 20%);
  border-radius: 50rpx;
}
.home_ico_bg image{
  width: 60rpx;
  height: 60rpx;
}
.home_works{
  margin: 0 auto 160rpx auto;
  width: 90%;
}
.home_works text{
  font-size: 40rpx;
  line-height: 40rpx;
  display: block;
  margin-bottom: 40rpx;
  font-weight: bold;
}
.susume{
  float: left;
  width: 50%;
  height: 260rpx;
}
.susume image{
  width: 100%;
  height: 260rpx;
}