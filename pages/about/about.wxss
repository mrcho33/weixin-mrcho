/* pages/about/about.wxss */
.banner{
  display: flex;
  justify-content: center;
  border-radius: 20rpx;
  width: 100%;
  height: 240rpx;
  background-image: url('https://img.zcool.cn/community/01cba15accd55ca801213867acfa20.jpg@1280w_1l_2o_100sh.jpg');
  margin-bottom: 200rpx;
}
.banner_bg{
  position: absolute;
  width: 100%;
  height: 240rpx;
  background-color: rgb(0,0,0, 5%);
}
.about_mid{
  margin: 0 auto;
  width: 80%;
}
.about_title{
  width: 100%;
  display: block;
  text-align: left;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 32rpx;
  padding: 20rpx 0;
}
.about_cv{
  display: block;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}
.about_header_img{
  position: absolute;
  width: 180rpx;
  top:140rpx;
}
.about_header_img image{
  display: flex;
  justify-content: center;
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  border: #ffffff 8rpx solid;
}
.about_header_img text{
  margin-top: 20rpx;
  line-height: 48rpx;
  display: block;
  width: 100%;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}
.social{
  font-size: 40rpx;
  color: blue;
}
